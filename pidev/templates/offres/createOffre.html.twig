{% extends 'baseform.html.twig' %}
	


{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ajouter un offre</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f) }}
                        


                        <label for="inputText" class="col-sm-4 col-form-label">NOM</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}
                            
                        </div>
                        {{ form_errors(f.nom,{'attr':{'class':'text-danger'}}) }}

                        <label for="inputText" class="col-sm-4 col-form-label">Date_debut</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.dateDatedeb,{'attr':{'class':'form-control'}}) }}
                        
                        </div>

                        <label for="inputText" class="col-sm-4 col-form-label">Date_fin</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.dateFin,{'attr':{'class':'form-control'}}) }}
                            
                        </div>
                        {{ form_errors(f.dateFin,{'attr':{'class':'form-control'}}) }}

                        <label for="inputText" class="col-sm-4 col-form-label">pourcentage</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.pourcentage,{'attr':{'class':'form-control'}}) }}
                            

                        </div>

                       
                   



                  

                    <br/>
                   

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}

